{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}